<div class="container-fluid product-show">

<p id="notice"><%= notice %></p>

<div class="col-xs-12 col-md-7">
	<div class="row product_show">

<p>
  <%= @product.name %>
</p>

<p>
  <%= image_tag(@product.image_url, class: "img-responsive img-zoom", width: "700", data_zoom_image: @product.image_url) %>
</p>

<p>
  <%= @product.description %>
</p>

<p>
  <strong>Color:</strong>
  <%= @product.color %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div> </p>

<%= form_tag "/payments/create" do %>
  <%= render partial: "shared/stripe_checkout_button" %>
<% end %>

	</div>
</div>

<div class="col-xs-8 col-md-5">
	<div class="row product_comment">


<%= render 'new_comment' %>
<%= render 'comments' %>

<%= will_paginate @comments %>

<%= link_to 'Edit', edit_product_path(@product) %> 
<%= link_to 'Back', products_path %>

	</div>
</div>


</div>